<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


        <style name="content_left">
            <item name="android:paddingTop">10dp</item>
            <item name="android:textColor">@color/deepskyblue</item>
            <item name="android:textSize">30sp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <style name="content_right">
            <item name="android:gravity">center</item>
            <item name="android:textSize">20sp</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

    <style name="content">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="content_iv">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- popupwindow 动画 -->
    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/enter_anim_in</item>
        <item name="android:windowExitAnimation">@anim/out_anim_in</item>

    </style>
    <!-- popupwindow 动画 -->
    <style name="AnimationOut">
        <item name="android:windowEnterAnimation">@anim/out_anim</item>
        <item name="android:windowExitAnimation">@anim/enter_anim</item>

    </style>

    <style name="ll_change_into_content">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="iv_change_content">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="tv_change_content">
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="tv_history_content">
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>
