<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


        <style name="content_left">
            <item name="android:paddingTop">10dp</item>
            <item name="android:textColor">@color/deepskyblue</item>
            <item name="android:textSize">30sp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

        <style name="content_right">
            <item name="android:gravity">center</item>
            <item name="android:textSize">20sp</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

    <style name="content">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="content_iv">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- popupwindow 动画 -->
    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/out_anim</item>
    </style>





</resources>
