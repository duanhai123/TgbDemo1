<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        style="@style/content">
        <ImageView
                android:id="@+id/iv_back"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/ivory"

            android:text="新用户注册"
            style="@style/content_right" />
    </LinearLayout>
        <LinearLayout
            android:background="@drawable/login"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/ivory"
               android:padding="5dp"
                android:gravity="center"
                android:text="手机号码:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText

                android:background="@null"
                android:layout_marginLeft="32dp"
                android:textSize="15sp"
                android:textColorHint="#656565"
                android:textColor="@color/ivory"
                android:id="@+id/ec_edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"/>
        </LinearLayout>
    <ImageView
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@color/ivory"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
        <LinearLayout
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/ivory"
                android:padding="5dp"
                android:gravity="center"
                android:text="短信验证码:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText

                android:background="@null"

                android:layout_marginLeft="18dp"
                android:textSize="14sp"
                android:textColorHint="#656565"
                android:textColor="@color/ivory"
                android:id="@+id/ec_edit_pin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="请输入短信验证码"/>
            <Button

                android:textSize="14sp"
                android:background="@drawable/btn_shape"
                android:textColor="@color/ivory"
                android:clickable="true"
                android:id="@+id/tv_message"

                android:gravity="center"
                android:text="获取短信验证码"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp" />
        </LinearLayout>
    <ImageView
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@color/ivory"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
        <LinearLayout
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/ivory"
                android:gravity="center"
                android:text="设置登录密码:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColorHint="#656565"
                android:textColor="@color/ivory"
                android:inputType="textPassword"
                android:id="@+id/ec_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"/>
        </LinearLayout>
    <ImageView
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@color/ivory"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/ivory"
            android:gravity="center"
            android:text="确认登录密码:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:id="@+id/et_enter_pwd"
            android:textColorHint="#656565"
            android:inputType="textPassword"
            android:textColor="@color/ivory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"/>
    </LinearLayout>
    <ImageView
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@color/ivory"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/ivory"

                android:gravity="center"
                android:text="邀请码:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:background="@null"
                android:textSize="15sp"
                android:textColorHint="#656565"
                android:textColor="@color/ivory"
                android:layout_marginLeft="48dp"
                android:id="@+id/ec_edit_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入好友推荐码"/>
            <CheckBox
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/login_selector"
                android:id="@+id/cb_system"

                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/ivory"
                android:gravity="center"
                android:text="系统推荐"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>
    <ImageView
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@color/ivory"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <Button
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:textSize="15sp"
        android:textColor="@color/ivory"
        android:background="@drawable/btn_shape"
        android:layout_marginTop="50dp"
        android:id="@+id/ec_btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="注册"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox

            android:button="@null"
            android:background="@drawable/login_selector"
            android:id="@+id/cb_agree"

            android:padding="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:textColor="@color/ivory"
            android:gravity="center"
            android:text="我已阅读并且同意服务条款"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>