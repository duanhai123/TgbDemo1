<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f2f3f8"
    android:visibility="invisible"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_insurance">

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="投资交易中未操作资产值的不可抗力风险保障"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="XGB-II型 1赔50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/ll_shape"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="投保:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:background="@null"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:gravity="center|right"
            android:textColorHint="#dadada"
            android:hint="≤100.0000฿"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/ivory"
            android:layout_marginRight="15dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/borrow2"
            android:layout_marginTop="13dp"
            android:text="可保100.0000฿"
            android:layout_width="140dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:text="保额 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:max="100"
            android:progress="92"
            android:layout_marginRight="10dp"
            android:thumb="@drawable/thumb_bar"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12sp"
            android:textColor="@color/ivory"
            android:layout_marginRight="15dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/borrow2"
            android:layout_marginTop="13dp"
            android:text="可投2.0000฿"
            android:layout_width="140dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:text="保金 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:max="20"
            android:progress="19"
            android:layout_marginRight="10dp"
            android:thumb="@drawable/thumb_bar"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/ll_shape"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_ii_3"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="保障期限 :"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="15sp"
                android:layout_marginRight="20dp"
                android:textColor="#dadada"
                android:layout_marginLeft="5dp"
                android:gravity="center|right"
                android:text="2016-11-17----本期交易结束"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/orange"
            android:text="(预计2016-11-13)"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:text="本人已阅读并同意签署"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_marginTop="15dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:textSize="15sp"
        android:textColor="@color/ivory"
        android:text="确认"
        android:background="@drawable/btn_shape"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</LinearLayout>
           
        