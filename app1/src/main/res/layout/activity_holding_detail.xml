<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout style="@style/ll_change_into_content">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/back"
            style="@style/iv_change_content" />
        <TextView
            android:text="持有明细"
            style="@style/tv_change_content" />
        <TextView
            android:id="@+id/tv_sort"
            android:text="筛选"
            style="@style/tv_history_content" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_content_income"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<include layout="@layout/res_income_sort" android:id="@+id/ll_content_income"/>
<include layout="@layout/res_changeinto_sort" android:id="@+id/ll_content_changeinto"/>
<include layout="@layout/res_changeinout_sort" android:id="@+id/ll_content_changeinout"/>
<include layout="@layout/res_receive_dividend_sort" android:id="@+id/ll_content_receive_dividend"/>
<include layout="@layout/res_send_dividend_sort" android:id="@+id/ll_content_send_dividend"/>

    </FrameLayout>
</LinearLayout>