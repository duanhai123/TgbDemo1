<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout style="@style/content"

            android:background="@color/black"

            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_gravity="center"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:textColor="@color/ivory"
                android:padding="10dp"
                android:text="重置登录密码"
                style="@style/content_right" />
        </LinearLayout>
        <LinearLayout
            android:background="#f2f3f8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/text_shape"
                android:layout_marginTop="33dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="新密码:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:textColorHint="@color/dimgray"
                android:background="@null"
                android:id="@+id/et_newpwd"
                android:textSize="15dp"
                android:padding="5dp"
                android:gravity="center"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:layout_marginLeft="152dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </LinearLayout>

        <LinearLayout

            android:layout_marginLeft="33dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textColor="@color/black"


                android:textSize="20sp"
                android:text="强度:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_lower"
                android:background="@color/crimson"
                android:textSize="15dp"
                android:textColor="@color/ivory"
                android:text="低"
                android:layout_marginLeft="36dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_middle"
                android:background="@color/ivory"
                android:textSize="15dp"
                android:textColor="@color/ivory"
                android:text="中"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginRight="48dp"
                android:id="@+id/btn_high"
                android:background="@color/ivory"
                android:textSize="15dp"
                android:textColor="@color/ivory"
                android:text="高"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/text_shape"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView

                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="确认新密码:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textColorHint="@color/dimgray"
                android:background="@null"
                android:id="@+id/et_enter_newpwd"
                android:textSize="15dp"
                android:padding="5dp"
                android:hint="请再次输入新密码"
                android:layout_marginLeft="120dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--<LinearLayout
            android:background="@drawable/text_shape"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/black"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="短信验证码:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:textSize="15dp"

                android:id="@+id/et_pin"
                android:background="@null"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />
                </LinearLayout>-->
            <!--<Button
                android:id="@+id/btn_pin"

                android:background="@drawable/btn_shape"
                android:layout_gravity="center"

                android:text="获取短信验证码"
                android:layout_width="match_parent"

                android:layout_height="50dp" />-->


    <Button
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:id="@+id/btn_submit"
        android:background="@drawable/btn_shape"
        android:layout_marginTop="52dp"
        android:text="提交"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
        </LinearLayout>
</LinearLayout>
    </LinearLayout>