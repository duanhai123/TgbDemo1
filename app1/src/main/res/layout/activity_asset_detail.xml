<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">
    <LinearLayout style="@style/ll_change_into_content">
        <ImageView
            android:id="@+id/iv_back_detail"
            android:src="@drawable/back"
            style="@style/iv_change_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:text="资产操作明细"
            style="@style/tv_change_content" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:background="#f2f3f8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="15sp"
                android:id="@+id/tv_asset_text"
                android:textColor="@color/orange"
                android:text="操作明细截图"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="15sp"
                android:id="@+id/tv_asset_none_text"
                android:text="未操作明细截图"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_asset_line"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp">
            <View
               android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:background="@color/orange"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:background="@color/dimgray"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_none_asset_line"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:background="@color/dimgray"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:background="@color/orange"/>
            </LinearLayout>
        </FrameLayout>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:visibility="invisible"
               android:id="@+id/ll_asset_image"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="2016-12-11"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="2016-12-11"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp" />
           </LinearLayout>
           <LinearLayout
               android:visibility="visible"
               android:id="@+id/ll_none_asset_image"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:gravity="center_vertical"
                   android:layout_marginLeft="10dp"
                   android:text="2017-12-11"
                   android:layout_width="match_parent"
                   android:layout_height="25dp" />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="240dp" />
               <TextView
                   android:layout_marginLeft="10dp"
                   android:gravity="center_vertical"
                   android:text="2017-12-11"
                   android:layout_width="match_parent"
                   android:layout_height="25dp" />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="240dp" />
           </LinearLayout>
       </FrameLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>