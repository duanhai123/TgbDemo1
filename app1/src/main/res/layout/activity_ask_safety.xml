<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout style="@style/content"

        android:background="@color/black"

        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/ivory"

            android:text="找回密码"
            style="@style/content_right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#f2f3f8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_marginLeft="17dp"
        android:id="@+id/tv_ask1"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="我的小学老师叫什么名字?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <EditText
        android:gravity="center_vertical"
        android:id="@+id/et_ask1"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="17dp"
        android:id="@+id/tv_ask2"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="我的出生地是哪里?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_shape"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <EditText

        android:gravity="center_vertical"
        android:background="@null"
        android:id="@+id/et_ask2"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:id="@+id/btn_next"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_shape"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
    </LinearLayout>